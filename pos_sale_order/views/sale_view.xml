<?xml version="1.0"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <button name="action_unlock" position="after">
                <button string="Pay" type="action" name="%(pos_payment_wizard_action)d"/>
                    <!--invisible="not context.get('pay_with_pos')"/>-->
            </button>
            <xpath expr="//notebook/page[@name='other_information']/group" position="inside">
                <group name="pos">
                    <field name="session_id"/>
                    <field name="pos_reference"/>
                    <field name="statement_ids"
                        colspan="4" readonly="True">
                            <tree>
                                <field name="journal_id"/>
                                <field name="statement_id"/>
                                <field name="amount"/>
                        </tree>
                    </field>
                </group>
            </xpath>
         </field>
    </record>

    <record id="sale_order_view_tree" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="Sale Order" create="0">
                <field name="name"/>
                <field name="confirmation_date"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="amount_total"/>
                <button string="Pay" type="action" name="%(pos_payment_wizard_action)d" class="btn-primary"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_sale_order_pos">
        <field name="name">Sale Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window.view" id="stock_picking_pos_view_tree">
        <field name="act_window_id" ref="action_sale_order_pos"/>
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sale_order_view_tree"/>
    </record>

</odoo>
