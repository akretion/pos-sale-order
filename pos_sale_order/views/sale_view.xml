<?xml version="1.0"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='other_information']/group" position="inside">
                <group name="pos">
                    <field name="session_id"/>
                    <field name="pos_reference"/>
                </group>
            </xpath>
            <field name="amount_total" position="after">
                <field colspan="4" name="statement_ids" readonly="True" nolabel="1" attrs="{'invisible': [('statement_ids', '=', False)]}">
                    <tree>
                        <field name="journal_id"/>
                        <field name="amount"/>
                    </tree>
                </field>
            </field>
         </field>
    </record>

    <record id="sale_order_view_form" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <div class="oe_title" position="after">
                <field name="pos_payment_state" invisible="0"/>
                <div class="row justify-content-center" attrs="{'invisible': [('state', 'in', ('draft', 'sent', 'cancel'))]}">
                    <div class="col-3" attrs="{'invisible': [('delivery_state', 'not in', ('unprocessed', 'partially'))]}">
                        <div class="card text-white bg-danger mb-3 text-center">
                            <div class="card-header">Delivery</div>
                            <div class="card-body">
                                <div class="card-title display-3">
                                    <field name="unit_to_deliver"/>
                                </div>
                            </div>
                            <div class="card-footer">
                              <button class="btn-primary btn-lg" string="Deliver" type="object" name="open_pos_delivery_wizard"/>
                            </div>
                        </div>
                    </div>

                    <div class="col-3" attrs="{'invisible': [('delivery_state', '!=', 'done')]}">
                        <div class="card text-white bg-success mb-3 text-center">
                            <div class="card-header">Delivery</div>
                            <div class="card-body">
                                <div class="card-title display-3">Done</div>
                            </div>
                            <div class="card-footer">
                            </div>
                        </div>
                    </div>

                    <div class="col-3" attrs="{'invisible': [('pos_payment_state', '!=', 'pending')]}">
                        <div class="card text-white bg-danger mb-3 text-center">
                          <div class="card-header">Payment</div>
                          <div class="card-body">
                              <div class="card-title display-3">
                                <field name="pos_amount_to_pay"/>
                              </div>
                          </div>
                          <div class="card-footer">
                            <button class="btn-primary btn-lg" string="Pay" type="object" name="open_pos_payment_wizard"/>
                          </div>
                        </div>
                    </div>

                    <div class="col-3" attrs="{'invisible': [('pos_payment_state', '!=', 'done')]}">
                        <div class="card text-white bg-success mb-3 text-center">
                            <div class="card-header">Payment</div>
                            <div class="card-body">
                                <div class="card-title display-3">Done</div>
                            </div>
                            <div class="card-footer">
                            </div>
                        </div>
                    </div>

                    <div class="col-3" attrs="{'invisible': [('pos_payment_state', '!=', 'none')]}">
                        <div class="card text-white bg-dark mb-3 text-center">
                            <div class="card-header">Payment</div>
                            <div class="card-body">
                                <div class="card-title display-3">Not needed</div>
                            </div>
                            <div class="card-footer">
                            </div>
                        </div>
                    </div>

                </div>
            </div>
          </field>
    </record>

    <record id="sale_order_view_tree" model="ir.ui.view">
        <field name="model">sale.order</field>
        <field name="arch" type="xml">
            <tree string="Sale Order" create="0">
                <field name="name"/>
                <field name="confirmation_date"/>
                <field name="partner_id"/>
                <field name="user_id"/>
                <field name="amount_total"/>
                <field name="delivery_state"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_sale_order_pos">
        <field name="name">Sale Order</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[("state", "not in", ("draft", "sent", "cancel"))]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.actions.act_window.view" id="action_sale_order_pos_tree">
        <field name="act_window_id" ref="action_sale_order_pos"/>
        <field name="sequence" eval="10"/>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="sale_order_view_tree"/>
    </record>

    <record model="ir.actions.act_window.view" id="action_sale_order_pos_form">
        <field name="act_window_id" ref="action_sale_order_pos"/>
        <field name="sequence" eval="20"/>
        <field name="view_mode">form</field>
        <field name="view_id" ref="sale_order_view_form"/>
    </record>

</odoo>
