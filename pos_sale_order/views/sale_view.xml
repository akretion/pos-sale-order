<?xml version="1.0"?>
<openerp>
    <data>

        <record id="view_order_form" model="ir.ui.view">
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="action_unlock" position="after">
                    <button string="Pay" type="action" name="%(pos_payment_wizard_action)d"/>
                        <!--invisible="not context.get('pay_with_pos')"/>-->
                </button>
                <xpath expr="//notebook/page[@name='other_information']/group" position="inside">
                    <group name="pos">
                        <field name="session_id"/>
                        <field name="pos_reference"/>
                        <field name="statement_ids"
                            colspan="4" readonly="True">
                                <tree>
                                    <field name="journal_id"/>
                                    <field name="statement_id"/>
                                    <field name="amount"/>
                            </tree>
                        </field>
                    </group>
                </xpath>
             </field>
        </record>

    </data>
</openerp>
