<?xml version="1.0" encoding="UTF-8"?>
<odoo>

<record id="pos_delivery_wizard_view_form" model="ir.ui.view">
    <field name="model">pos.delivery.wizard</field>
    <field name="arch" type="xml">
        <form string="Delivert">
            <p class="oe_grey">Select the product to delivers
            </p>
            <group>
                <field name="line_ids" nolabel="1">
                    <tree editable="bottom" create="0">
                        <field name="qty" widget="numeric_step" options="{'step': 1, 'min': 0}" />
                        <field name="product_id" readonly="1"/>
                    </tree>
                </field>
            </group>
            <footer>
                <button name="confirm" string="Confirm" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>

</odoo>
