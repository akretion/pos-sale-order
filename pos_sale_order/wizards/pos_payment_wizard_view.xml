<?xml version="1.0" encoding="UTF-8"?>
<odoo>


<record id="pos_payment_wizard_view_form" model="ir.ui.view">
    <field name="model">pos.payment.wizard</field>
    <field name="arch" type="xml">
        <form string="Pay">
            <p class="oe_grey">Please select the journal and the amount to paid
            </p>
            <group>
                <field name="available_journal_ids" invisible="1"/>
                <field name="journal_id" domain="[('id', 'in', available_journal_ids)]"/>
                <field name="amount"/>
            </group>
            <footer>
                <button name="pay" string="Pay" type="object" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>

<record model="ir.actions.act_window" id="pos_payment_wizard_action">
    <field name="name">Pay</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">pos.payment.wizard</field>
    <field name="view_type">form</field>
    <field name="view_mode">form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="target">new</field>
</record>


</odoo>
